{% extends 'base.html.twig' %}

{% block title %}Bibliothèque
{% endblock %}

{% block stylesheets %}
	<link href="{{ asset('/app.css') }}" rel="stylesheet">
	<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.6/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-4Q6Gf2aSP4eDXB8Miphtr37CMZZQ5oXLH2yaXMJ2w8e2ZtHTl7GptT4jmndRuHDT" crossorigin="anonymous">
	<script src="https://kit.fontawesome.com/YOUR-KIT-ID.js" crossorigin="anonymous"></script>
{% endblock %}

{% block body %}
	<form method="post">
		{% if error %}
			<div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
		{% endif %}


		<div class="row">
			<div class="col-sm">
				<img src="{{ asset('/coffee-livre.jpg') }}" alt="Biblio" class="img-fluid">
			</div>
			<div class="col-sm">

				<div class="card">
					<div class="card-header">
						<h1 class="h3 mb-3 font-weight-normal text-center">Se connecter</h1>
					</div>
					<div class="card-body">
						<p>
							<label for="inputEmail">Email</label>
							<input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" autocomplete="email" required autofocus>
						</p>
						<p>
							<label for="inputPassword">Mot de passe</label>
							<input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>
							<input type="hidden" name="_csrf_token" data-controller="csrf-protection" value="{{ csrf_token('authenticate') }}">
						</p>
						<p>
							<button class="btn bkg-lavande" type="submit">
								Se connecter
							</button>
						</p>
						<div class="mt-3 text-center">
							<a href="{{ path('app_register') }}">Pas encore de compte ? Inscrivez-vous</a>
						</div>
					</div>
				</div>
			</div>
		</div>
		<div class="row">
			Répertorier tous vos livres dans cette bibliothèque virtuelle pour les retrouver facilement.
		</div>
	</form>


{% endblock %}
